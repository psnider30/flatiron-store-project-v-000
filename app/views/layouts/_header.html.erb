<nav class="">
    <ul>
        <% if !logged_in? %>
          <li><%= link_to "Sign up", new_user_registration_path %></li>
          <li><%= link_to "sign in", new_user_session_path if params[:controller] == 'store' && params[:action] == 'index' %></li>
          <li><%= link_to "sign in with facebook", user_omniauth_authorize_path(:facebook) if !logged_in? %></li>
        <% else %>
          <h4>Signed in as <%= current_user.email %></h4>
        <% end %>
        <li> <%= link_to "Store Home", store_path %> </li>

        <li> <%= link_to "Cart", cart_path(current_user.current_cart) if current_user && current_user.current_cart %></li>

        <li><%= link_to("Sign out", destroy_user_session_path, :method => 'delete') %></li>
    </ul>
</nav>
